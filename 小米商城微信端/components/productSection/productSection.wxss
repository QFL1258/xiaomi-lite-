/* components/productSection/productSection.wxss */
.product-section{
  width: 100%;
  height: 106rpx;
  background-color: #fff;
}
.section-inner {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -ms-flex-direction: row;
  flex-direction: row;
  height: inherit;
  line-height: 106rpx;
  border-bottom: 4rpx solid #f3f3f3;
  width: 92vw;
  margin: 0 4vw;
}
.product-title-wrap {
  margin-right: 40rpx;
  font-size: 28rpx;
}
.product-title {
  color: #8c8c8c;
}
.product-flex {
  -webkit-box-flex: 1;
  -webkit-flex: 1 0 auto;
  flex: 1 0 auto;
  font-size: 30rpx;
  position: relative;
}
.product-desc {
  color: #202020;
}
.more::before {
  content: "";
  position: absolute;
  right: 16rpx;
  top: 50%;
  width: 20rpx;
  height: 20rpx;
  transform: translate3d(0,-50%,0) rotate(135deg);
  -webkit-transform: translate3d(0,-50%,0) rotate(135deg);
  border-left: 2rpx solid currentColor;
  border-top: 2rpx solid currentColor;
}