/* components/cellListBox/cellListBox.wxss */
.cellList-box {
  height: 480rpx;
  width: 94vw;
  margin: 20rpx 3vw 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -ms-flex-direction: column;
  flex-direction: column;
  border-radius: 6rpx;
}
.cellList-img-wrap {
  width: 100%;
  height: 360rpx;
  border-top-left-radius: 6rpx;
  border-top-right-radius: 6rpx;
  background-color: papayawhip;
}
.cellList-img {
  width: 100%;
  height: 360rpx;
  opacity: 0;
  transition: all .8s;
}
.is-visible .cellList-img {
  opacity: 1;
}
.cellList-bottom {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -ms-flex-direction: row;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 120rpx;
  width: 100%;
  background-color: white;
  border-bottom-left-radius: 6rpx;
  border-bottom-right-radius: 6rpx; 
}
.cellList-type-wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  height: auto;
   padding: 6rpx 14rpx 6rpx;
  background-color: #ff6700;
  border-radius: 12rpx;
  margin-right: 14rpx;
}
.cellList-type {
   font-size: 24rpx;
   color: white;
}
.cellList-title {
  font-size: 30rpx;
}