/* 每日精选 */
.everyDay{
  width: 100%;
}
.everyTitle{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 20rpx;
  font-weight: bold;
}
.every_product{
  width: 100%;
  display: flex;
  justify-content: space-between;
    flex-wrap: wrap;
}
.every-list{
  width: 49.5%;
  height: 470rpx;
  display: flex;
  flex-direction: column;

  text-align: center;
}
.every-img{
  width: 100%;
  height: 300rpx;
 
  display: flex;
  justify-content: center;
  align-items: center;
}
.every-img image{
  width: 300rpx;
  height: 200rpx;
}
.every-item{
  display: flex;
  flex-direction: column;
  padding-left: 60rpx;
  text-align: left;
  font-size: 14px;
}
.every-title{
  padding-top: 20rpx;
  padding-bottom: 10rpx;
}
.every-money{
  color: rgb(237,115,74);
  padding-top: 10rpx;
}
.every-money>.active{
  display: none;
}
.every-over{
  color: rgb(171, 171,171);
  padding-left: 10rpx;
  font-size: 12px;
  text-decoration: line-through;
}

.every_product>.every-list:first-child>.every-img{
   background-color: rgb(244, 244, 244);
}
.every_product>.every-list:nth-child(2)>.every-img{
  background-color: rgb(245,245,245);
}
.every_product>.every-list:nth-child(3)>.every-img{
  background-color: rgb(220,221,231);
}
.every_product>.every-list:nth-child(4)>.every-img{
  background-color: rgb(235,235,235);
}
.every_product>.every-list:nth-child(5)>.every-img{
  background-color: rgb(240,240,240);
}
.every_product>.every-list:nth-child(6)>.every-img{
  background-color: rgb(242,231,229);
}
.every_product>.every-list:nth-child(7)>.every-img{
  background-color: rgb(232,255,227);
}
.every_product>.every-list:nth-child(8)>.every-img{
  background-color: rgb(223,216,224);
}